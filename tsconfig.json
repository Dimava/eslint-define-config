{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "jsx": "react",
    "rootDir": ".",
    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
